# Database Configuration
MARIADB_ROOT_PASSWORD=<change-root-password-min-12-chars>
MYSQL_DATABASE=boarding_house
MYSQL_USER=boarding_house
MYSQL_PASSWORD=<change-password-min-12-chars>

# API and Server Configuration
SERVER_PORT=2105
API_SERVER_URL=http://localhost:2105
IMAGE_SERVER_URL=http://localhost:2105/images

# Security Configuration
JWT_SECRET_KEY=<change-min-32-chars-random-string>
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10

# File Service Configuration
FILE_TYPE=nhatro
FILE_API_KEY=<change-min-32-chars-api-key>
FILE_SERVER_URL=http://localhost:8081

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=<change-rabbitmq-user>
RABBITMQ_PASSWORD=<change-password-min-12-chars>
RABBITMQ_VHOST=/

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100